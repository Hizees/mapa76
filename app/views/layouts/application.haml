!!!
%html{:lang => 'es'}
  %head
    %meta{:charset => 'utf-8'}/
    %title= [@title, 'Mapa76'].compact.join(' | ')
    %meta{:content => '', :name => 'description'}/
    %meta{:content => '', :name => 'author'}/
    /[if lt IE 9]
      %script{:src => 'http://html5shim.googlecode.com/svn/trunk/html5.js'}
    = stylesheet_link_tag 'bootstrap.css', 'bootstrap-responsive', 'styles'
    = yield_content :styles
    = stylesheet_link_tag 'styles'
    :css
      body {
        padding-top: 60px;
        padding-bottom: 40px;
      }
      .sidebar-nav {
        padding: 9px 0;
        /*margin-top: -20px;*/
      }
      /*
