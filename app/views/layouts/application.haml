  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar{'data-target' => '.nav-collapse', 'data-toggle' => 'collapse'}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => '/'} Mapa76
          .nav-collapse
            %ul.nav
              %li.active
                %a{:href => '/'} Inicio
              %li
                %a{:href => '/documents'} Documentos
              %li
                %a{:href => '/people'} Personas
            %form{:class => 'navbar-search pull-left'}
              %input{:type => 'text', :class => 'search-query', :placeholder => 'Buscar'}
            %p.navbar-text.pull-right
              %a{:href => '#'} usuario
          / /.nav-collapse

    .container-fluid
      .row-fluid
        .span9
          - if content_for?(:hero)
            .hero-unit
              = yield_content :hero
          - if content_for?(:row)
            .row-fluid
              = yield_content :row
          = yield
        / /.span9

        .span3
          .well.sidebar-nav
            %ul.nav.nav-list
              %li.nav-header Sidebar
              %li.active
                %a{:href => "#"} Link
              %li
                %a{:href => "#"} Link
              %li
                %a{:href => "#"} Link
              %li
                %a{:href => "#"} Link
              %li.nav-header Sidebar
              %li
                %a{:href => "#"} Link
              %li
                %a{:href => "#"} Link
              %li
                %a{:href => "#"} Link
              %li
                %a{:href => "#"} Link
              %li
                %a{:href => "#"} Link
              %li
                %a{:href => "#"} Link
              %li.nav-header Sidebar
              %li
                %a{:href => "#"} Link
              %li
                %a{:href => "#"} Link
              %li
                %a{:href => "#"} Link
          / /.sidebar-nav
        / /.span3
      / /.row-fuild

      %hr/
      %footer.footer
        %p{:class => 'pull-right'}
          %a{:href => '#'} Arriba

    / /.container-fuild

    / Javascript
    = javascript_include_tag 'https://www.google.com/jsapi'
    = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js'
    = javascript_include_tag 'bootstrap.min', 'bootstrap-button'
    = javascript_include_tag 'jquery.tablesorter.min'
    = yield_content :javascripts
    = javascript_include_tag 'application'
