!!!
%html{:lang => "es", :dir => "ltr"}
  %head
    %meta{:charset => "utf-8"}
      %meta{:content => "width=device-width, initial-scale=1, maximum-scale=1", :name => "viewport"}
        %title PDF.js viewer
        %link{:href => "/viewer/viewer.css", :rel => "stylesheet"}/
        %link{:href => "/viewer/locale.properties", :rel => "resource", :type => "application/l10n"}/

        %script{:src => "/viewer/compatibility.js", :type => "text/javascript"}
        %script{:src => "/viewer/l10n.js", :type => "text/javascript"}
        %script{:src => "/viewer/pdf.js", :type => "text/javascript"}
        :javascript
          // Specify the main script used to create a new PDF.JS web worker.
          // In production, change this to point to the combined `pdf.js` file.
          PDFJS.workerSrc = '/viewer/pdf.js';

        %script{:src => "/viewer/debugger.js", :type => "text/javascript"}
        %script{:src => "/viewer/viewer.js", :type => "text/javascript"}
        :javascript
          var kDefaultURL = '/uploads/#{@doc.original_file}';

  %body
    #outerContainer
      #sidebarContainer
        #toolbarSidebar.splitToolbarButton.toggled
          %button#viewThumbnail.toolbarButton.group.toggled{"data-l10n-id" => "thumbs", :onclick => "PDFView.switchSidebarView('thumbs')", :tabindex => "1", :title => "Show Thumbnails"}
            %span{"data-l10n-id" => "thumbs_label"} Thumbnails
          %button#viewOutline.toolbarButton.group{"data-l10n-id" => "outline", :onclick => "PDFView.switchSidebarView('outline')", :tabindex => "2", :title => "Show Document Outline"}
            %span{"data-l10n-id" => "outline_label"} Document Outline
          %button#viewSearch.toolbarButton.group.hidden{"data-l10n-id" => "search_panel", :onclick => "PDFView.switchSidebarView('search')", :tabindex => "3", :title => "Search Document"}
            %span{"data-l10n-id" => "search_panel_label"} Search Document
        #sidebarContent
          #thumbnailView
          #outlineView.hidden
          #searchView.hidden
            #searchToolbar
              %input#searchTermsInput.toolbarField{:onkeydown => "if (event.keyCode == 13) PDFView.search()"}
                %button#searchButton.textButton.toolbarButton{"data-l10n-id" => "search", :onclick => "PDFView.search()"} Find
            #searchResults
      / sidebarContainer
      #mainContainer
        .toolbar
          #toolbarContainer
            #toolbarViewer
              #toolbarViewerLeft
                %button#sidebarToggle.toolbarButton{"data-l10n-id" => "toggle_slider", :tabindex => "4", :title => "Toggle Sidebar"}
                  %span{"data-l10n-id" => "toggle_slider_label"} Toggle Sidebar
                .toolbarButtonSpacer
                .splitToolbarButton
                  %button#previous.toolbarButton.pageUp{"data-l10n-id" => "previous", :onclick => "PDFView.page--", :tabindex => "5", :title => "Previous Page"}
                    %span{"data-l10n-id" => "previous_label"} Previous
                  .splitToolbarButtonSeparator
                  %button#next.toolbarButton.pageDown{"data-l10n-id" => "next", :onclick => "PDFView.page++", :tabindex => "6", :title => "Next Page"}
                    %span{"data-l10n-id" => "next_label"} Next
                %label#pageNumberLabel.toolbarLabel{"data-l10n-id" => "page_label", :for => "pageNumber"} Page:
                %input#pageNumber.toolbarField.pageNumber{:min => "1", :onchange => "PDFView.page = this.value;", :size => "4", :tabindex => "7", :type => "number", :value => "1"}
                %span#numPages.toolbarLabel
              #toolbarViewerRight
                %input#fileInput.fileInput{:oncontextmenu => "return false;", :style => "visibility: hidden; position: fixed; right: 0; top: 0", :type => "file"}/
                %button#openFile.toolbarButton.openFile{"data-l10n-id" => "open_file", :onclick => "document.getElementById('fileInput').click()", :tabindex => "11", :title => "Open File"}
                  %span{"data-l10n-id" => "open_file_label"} Open
                /
                  <button id="print" class="toolbarButton print" title="Print" tabindex="11" data-l10n-id="print" onclick="window.print()">
                  <span data-l10n-id="print_label">Print</span>
                  </button>
                %button#download.toolbarButton.download{"data-l10n-id" => "download", :onclick => "PDFView.download();", :tabindex => "12", :title => "Download"}
                  %span{"data-l10n-id" => "download_label"} Download
                / <div class="toolbarButtonSpacer"></div>
                %a#viewBookmark.toolbarButton.bookmark{"data-l10n-id" => "bookmark", :href => "#", :tabindex => "13", :title => "Current view (copy or open in new window)"}
                  %span{"data-l10n-id" => "bookmark_label"} Current View
              .outerCenter
                #toolbarViewerMiddle.innerCenter
                  .splitToolbarButton
                    %button.toolbarButton.zoomOut{"data-l10n-id" => "zoom_out", :onclick => "PDFView.zoomOut();", :tabindex => "8", :title => "Zoom Out"}
                      %span{"data-l10n-id" => "zoom_out_label"} Zoom Out
                    .splitToolbarButtonSeparator
                    %button.toolbarButton.zoomIn{"data-l10n-id" => "zoom_in", :onclick => "PDFView.zoomIn();", :tabindex => "9", :title => "Zoom In"}
                      %span{"data-l10n-id" => "zoom_in_label"} Zoom In
                  %span#scaleSelectContainer.dropdownToolbarButton
                    %select#scaleSelect{"data-l10n-id" => "zoom", :onchange => "PDFView.parseScale(this.value);", :oncontextmenu => "return false;", :tabindex => "10", :title => "Zoom"}
                      %option#pageAutoOption{"data-l10n-id" => "page_scale_auto", :selected => "selected", :value => "auto"} Automatic Zoom
                      %option#pageActualOption{"data-l10n-id" => "page_scale_actual", :value => "page-actual"} Actual Size
                      %option#pageFitOption{"data-l10n-id" => "page_scale_fit", :value => "page-fit"} Fit Page
                      %option#pageWidthOption{"data-l10n-id" => "page_scale_width", :value => "page-width"} Full Width
                      %option#customScaleOption{:value => "custom"}
                      %option{:value => "0.5"} 50%
                      %option{:value => "0.75"} 75%
                      %option{:value => "1"} 100%
                      %option{:value => "1.25"} 125%
                      %option{:value => "1.5"} 150%
                      %option{:value => "2"} 200%
        #viewerContainer
          #viewer
        #loadingBox
          #loading
          #loadingBar
            .progress
        #errorWrapper{:hidden => "true"}
          #errorMessageLeft
            %span#errorMessage
            %button#errorShowMore{"data-l10n-id" => "error_more_info", :onclick => "", :oncontextmenu => "return false;"}
              More Information
            %button#errorShowLess{"data-l10n-id" => "error_less_info", :hidden => "true", :onclick => "", :oncontextmenu => "return false;"}
              Less Information
          #errorMessageRight
            %button#errorClose{"data-l10n-id" => "error_close", :oncontextmenu => "return false;"}
              Close
          .clearBoth
          %textarea#errorMoreInfo{:hidden => "true", :readonly => "readonly"}
      / mainContainer
    / outerContainer
