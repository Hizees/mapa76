-# coding: utf-8
- content_for :styles do
  = stylesheet_link_tag "flick/jquery-ui-1.8.18.custom"
- content_for :javascripts do
  = javascript_include_tag 'jquery-ui-1.8.18.custom.min', 'bootstrap-alert', 'bootstrap-collapse', 'mustache'
  = javascript_include_tag 'analize'

%script#paragraphTemplate{:type => "text/template"}
  {{#paragraphs}}
  %p{"data-paragraph" => "{{_id}}"}
    {{content}}
  {{/paragraphs}}
%script#nextPageTemplate{:type => "text/template"}
  %a{:href => "{{url}}", :id => "next_page", "data-next" => "{{next_page}}", "data-document" => "{{id}}" }
    Cargar más contenido

- content_for :sidebar do
  %ul.nav.nav-list
    %li.nav-header Eventos
    %li
      %ul.events
        %li.event
          %a.close ×
          %ul
            %li.person
              %a.close ×
              %span El Vasco
            %li.organization
              %a.close ×
              %span ERP
            %li.type
              %a.close ×
              %span visto en
            %li.place
              %a.close ×
              %span Campo de Mayo
            %li.date
              %a.close ×
              %span 13 Mayo 1978
        %li.event
          %a.close ×
          %ul
            %li.person
              %a.close ×
              %span Juan Gómez
            %li.date
              %a.close ×
              %span Abril 1979
    %li.nav-header Herramientas
    %li.nav-header Contexto

.row-fluid
  .paragraphs
    - @paragraphs.each do |p|
      %p{"data-paragraph" => p.id}
        = p.content + "."
  .span4

.row-fluid
  .pages
  - if @paragraphs.length > 1
    .next_page
      = link_to "Cargar más contenido", url_for(:documents, :comb, :id => @document.id, :page => params[:page].to_i + 2),
        :id => "next_page",
        "data-next" => params[:page].to_i + 2,
        "data-document" => @document.id
    #loading{:style => "display:none; text-align: center;"}
      = image_tag 'ajax-bar-loader.gif', :style => "margin:0 auto;"
