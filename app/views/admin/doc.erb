<h1><%=@doc.title%></h1>

<table id='doc_stats'>
  <tr>
    <th><%=link_to "Personas mencionadas",url_for(:persons,:id => @doc.id)%></th><td><%=@doc.person.length%></td>
  </tr><tr>
  <th>Personas incorporadas a la db</th><td><%=@doc.milestones_dataset.distinct(:person_id).count%> </td>
  </tr><tr>
    <th>Hitos registrados</th><td><%=@doc.milestones_dataset.count%> </td>
  </tr>
</table>

<h2>Mas mencionadas</h2>
<ol>
  <%@most_mentioned.each{|p|%>
    <li><%=link_to p.name,url_for(:nombre,:doc_id => @doc.id, :id => p.id)%>
  <%}%>
</ol>
